# Application
APP_NAME=DocMind AI
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
# CORS_ORIGINS in JSON array format (or use comma-separated with custom parsing)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./docmind.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/docmind

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct-v0.3-q4_K_M

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cuda
# Options: cuda, cpu, mps (for Apple Silicon)

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_PREFIX=business_

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800
# 50MB in bytes
# ALLOWED_EXTENSIONS - uses code default: [".pdf",".txt",".doc",".docx",".html"]
# To override: ALLOWED_EXTENSIONS=[".pdf",".txt"]

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
# 7 days

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Free Plan Limits
FREE_QUERIES_PER_MONTH=50
FREE_MAX_DOCUMENTS=1
FREE_MAX_DOCUMENT_SIZE=5242880
# 5MB

# Starter Plan Limits
STARTER_QUERIES_PER_MONTH=1000
STARTER_MAX_DOCUMENTS=10
STARTER_MAX_DOCUMENT_SIZE=10485760
# 10MB

# Pro Plan Limits
PRO_QUERIES_PER_MONTH=10000
PRO_MAX_DOCUMENTS=50
PRO_MAX_DOCUMENT_SIZE=52428800
# 50MB

# Enterprise Plan Limits
ENTERPRISE_QUERIES_PER_MONTH=999999
ENTERPRISE_MAX_DOCUMENTS=999999
ENTERPRISE_MAX_DOCUMENT_SIZE=104857600
# 100MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/docmind.log

# API
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
